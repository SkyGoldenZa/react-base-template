{
   "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "jsx": "react",
      "strict": true,
      "baseUrl": "./",
      "paths": {
         "src/*": ["./src/*"]
      },
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true,
      "noImplicitAny": true,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "allowJs": true,
   },
   "exclude": [
      "node_modules"
   ]
}
